{
  "name": "seed-app-2020",
  "version": "0.0.1",
  "description": "Starter SPA React/Redux app w/ basic runtime and build tooling",
  "author": "ericsoco",
  "repository": {
    "type": "git",
    "url": "git@github.com:ericsoco/seed-app-2020.git"
  },
  "keywords": [
    "webdev",
    "SPA",
    "react",
    "redux",
    "parcel"
  ],
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.7.5",
    "dotenv": "^8.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-flow": "^7.10.4",
    "@babel/preset-react": "^7.7.4",
    "eslint": "^6.7.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-react": "^7.17.0",
    "flow-bin": "^0.129.0",
    "gh-pages": "^3.1.0",
    "husky": "^3.1.0",
    "parcel": "^2.0.0-alpha.3.2",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "lint": "eslint src",
    "prettier": "prettier --write \"src/**/*.{js,json}\"",
    "start": "parcel serve ./index.html",
    "build": "rm -rf ./dist; parcel build ./index.html --public-url './'",
    "deploy": "yarn build && yarn gh-pages -d ./dist",
    "test": "yarn lint && yarn prettier"
  },
  "browserslist": [
    "> 1%",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "volta": {
    "node": "12.18.2",
    "yarn": "1.22.4"
  }
}
